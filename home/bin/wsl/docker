#!/bin/bash


docker() {
    /usr/bin/docker "$@"
}

image() {
    case "$1" in
    prune)
        shift
        docker rmi $(docker images --format '{{.ID}}' --filter=dangling=true)
    ;;
    *)
        docker image "$@"
        ;;
    esac
}


case "$1" in
image)
    shift
    image "$@"
    ;;
prune)
    docker rm -f `docker ps -qa`
    ;;
*)
    docker "$@"
    ;;
esac

